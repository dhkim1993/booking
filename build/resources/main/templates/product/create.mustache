{{>layout/header}}

<div class="container"><h1>Create-Product</h1>
    <form>
        <div class="form-group">
            <label for="categoryId">카테고리</label>
            <select name="categoryId" id="categoryId" class="form-control">
                <option value="">카테고리선택</option>
                {{#categories}}
                    <option value="{{id}}" id="categoryId">{{name}}</option>
                {{/categories}}
            </select>
        </div>
        <div class="form-group">
            <label for="name">상품이름</label>
            <input type="text" class="form-control" id="name" placeholder="상품이름을 입력하세요">
        </div>
        <div class="form-group">
            <label for="description">상품설명</label>
            <input type="text" class="form-control" id="description" placeholder="상품설명을 입력하세요">
        </div>
        <div class="form-group">
            <label for="count">수량</label>
            <input type="number" class="form-control" id="count" placeholder="수량을 입력하세요">
        </div>
        <div class="form-group">
            <label for="startDate">시작날짜</label>
            <input type="date" class="form-control" id="startDate" placeholder="시작날짜">
        </div>
        <div class="form-group">
            <label for="endDate">종료날짜</label>
            <input type="date" class=" form-control" id="endDate" placeholder="종료날짜">
        </div>

        <div class="form-group">
            <label for="location">위치</label>
            <input type="text" class="form-control" id="location" placeholder="위치를 입력하세요">
        </div>

        <div class="jumbotron"><h1>Options</h1>

            <div class="form-group">
                <label for="option1">옵션1</label>
                <input type="text" class="form-control" id="option1" placeholder="옵션을 입력하세요">
            </div>
            <div class="form-group">
                <label for="option2">옵션2</label>
                <input type="text" class="form-control" id="option2" placeholder="옵션을 입력하세요">
            </div>
            <div class="form-group">
                <label for="option3">옵션3</label>
                <input type="text" class="form-control" id="option3" placeholder="옵션을 입력하세요">
            </div>
            <div class="form-group">
                <label for="price1">가격1</label>
                <input type="number" class="form-control" id="price1" placeholder="가격을 입력하세요">
            </div>
            <div class="form-group">
                <label for="price2">가격2</label>
                <input type="number" class="form-control" id="price2" placeholder="가격을 입력하세요">
            </div>
            <div class="form-group">
                <label for="price3">가격3</label>
                <input type="number" class="form-control" id="price3" placeholder="가격을 입력하세요">
            </div>
        </div>

        <h1>InformationByDate</h1>
        <div class="form-group">
            <label for="fistTime">1회차</label>
            <input type="text" class="form-control" id="fistTime" placeholder="1회차 시간을 입력하세요">
            <label for="secondTime">2회차</label>
            <input type="text" class="form-control" id="secondTime" placeholder="2회차 시간을 입력하세요">
            <label for="thirdTime">3회차</label>
            <input type="text" class="form-control" id="thirdTime" placeholder="3회차 시간을 입력하세요">
            <label for="fourthTime">4회차</label>
            <input type="text" class="form-control" id="fourthTime" placeholder="4회차 시간을 입력하세요">
        </div>
    </form>
    <button type="button" class="btn btn-primary" id="product-save">등록</button>
</div>

{{>product/js/save-js}}
