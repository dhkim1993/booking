{{>layout/header}}

<div class="container"><h1>Create-Coupon</h1>
    <form>
        <div class="form-group">
            <label for="name">쿠폰이름</label>
            <input type="text" class="form-control" id="name" placeholder="상품이름을 입력하세요">
        </div>
        <div class="form-group">
            <label for="month">월(month)</label>
            <input type="number" class="form-control" id="month" placeholder="월(month)을 입력하세요">
        </div>
        <div class="form-group">
            <label for="rate">할인률</label>
            <input type="number" class="form-control" id="rate" step="0.1" placeholder="할인률을 입력하세요">
        </div>
        <div class="form-group">
            <label for="expirationDate">사용기한</label>
            <input type="date" class="form-control" id="expirationDate" placeholder="사용기한을 입력하세요">
        </div>
    </form>
    <button type="button" class="btn btn-primary" id="coupon-save">등록</button>
</div>
{{>coupon/js/save-js}}
