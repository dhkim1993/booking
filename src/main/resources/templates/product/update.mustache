{{>layout/header}}

<div class="container"><h1>Product-Update</h1>
    <form>
        <div class="form-group">
            <label for="id">ID</label>
            <input class="form-control" id="id" value="{{product.id}}" readonly>
        </div>
        <div class="form-group">
            <label for="name">상품이름</label>
            <input type="text" class="form-control" id="name" value="{{product.name}}">
        </div>
        <div class="form-group">
            <label for="description">상품설명</label>
            <input type="text" class="form-control" id="description" value="{{product.description}}">
        </div>
        <div class=" form-group">
            <label for="count">수량</label>
            <input type="number" class="form-control" id="count" value="{{product.count}}">
        </div>
        <div class=" form-group">
            <label for="startDate">시작날짜</label>
            <input type="date" class="form-control" id="startDate" value="{{product.startDate}}">
        </div>
        <div class=" form-group">
            <label for="endDate">종료날짜</label>
            <input type="date" class="form-control" id="endDate" value="{{product.endDate}}">
        </div>
        <div class=" form-group">
            <label for="location">위치</label>
            <input type="text" class="form-control" id="location" value="{{product.location}}">
        </div>

        <div class="jumbotron"><h1>Options</h1>

            <div class="form-group">
                <label for="option1">옵션1</label>
                <input type="text" class="form-control" id="option1" value="{{option1.optionName}}">
            </div>
            <div class="form-group">
                <label for="option2">옵션2</label>
                <input type="text" class="form-control" id="option2" value="{{option2.optionName}}">
            </div>
            <div class="form-group">
                <label for="option3">옵션3</label>
                <input type="text" class="form-control" id="option3" value="{{option3.optionName}}">
            </div>
            <div class="form-group">
                <label for="price1">가격1</label>
                <input type="number" class="form-control" id="price1" value="{{option1.price}}">
            </div>
            <div class="form-group">
                <label for="price2">가격2</label>
                <input type="number" class="form-control" id="price2" value="{{option2.price}}">
            </div>
            <div class="form-group">
                <label for="price3">가격3</label>
                <input type="number" class="form-control" id="price3" value="{{option3.price}}">
            </div>
        </div>

        {{#firstTime}}
            <h1>InformationByDate</h1>
            <div class="form-group">
                <label for="firstTime">1회차</label>
                <input type="text" class="form-control" id="firstTime" {{#firstTime}}value="{{firstTime}}"{{/firstTime}}>
                <label for="secondTime">2회차</label>
                <input type="text" class="form-control" id="secondTime" {{#secondTime}}value="{{secondTime}}"{{/secondTime}}>
                <label for="thirdTime">3회차</label>
                <input type="text" class="form-control" id="thirdTime" value="{{thirdTime}}">
                <label for="fourthTime">4회차</label>
                <input type="text" class="form-control" id="fourthTime" value="{{fourthTime}}">
            </div>
        {{/firstTime}}
    </form>
    <button type="button" class="btn btn-primary" id="product-update">수정완료</button>
    <button type="button" class="btn btn-danger" id="product-delete">삭제</button>
</div>

